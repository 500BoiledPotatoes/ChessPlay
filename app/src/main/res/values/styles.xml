<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.ChessPlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LCIMDividerLine">
        <item name="android:background">@color/lcim_divider_line_color</item>
    </style>

    <style name="LCIMDividerLine.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="Smile.TextView">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Smile.TextView._White">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/zoomout_right</item>
        <item name="android:windowExitAnimation">@anim/zoomin_right</item>
    </style>
    <style name="Smile.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>
    <style name="Smile.TextView._Gray">
        <item name="android:textColor">@color/base_color_text_gray</item>
    </style>
    <style name="MenuPop" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/scale_top_in</item>
        <item name="android:windowExitAnimation">@anim/scale_top_out</item>
    </style>

    <style name="tab_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>
</resources>